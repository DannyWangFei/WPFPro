
@{
    ViewBag.Title = "账号激活";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ForgetPasswordNext", "Account", null, FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
{
    <div class="form-horizontal panel-body">
        <div class="form-group">
            <div class="col-sm-offset-6 col-sm-10">
                @Html.TextBox("email", null, new { @class = "form-control-static", placeholder = "邮箱", style = "padding:3px" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-6 col-sm-10">
                <button type="submit" class="btn btn-primary">发送邮件</button>
            </div>
        </div>
    </div>
}